package SUNWxwsvr
classification "System/X11"
import SUNWxwsvr exclude usr/openwin
# Replace Solaris logo with OpenSolaris logo
drop usr/X11/lib/xscreensaver/config/trusted-logo.png
drop usr/X11/lib/xscreensaver/config/unlock-logo.png
add link path=usr/X11/lib/xscreensaver/config/trusted-logo.png \
	target=opensolaris-logo.png
add link path=usr/X11/lib/xscreensaver/config/unlock-logo.png \
	target=opensolaris-logo.png
# Obsolete - replaced by /usr/openwin -> X11 symlink
drop usr/openwin/bin
drop usr/openwin/bin/xscreensaver
drop usr/openwin/bin/xscreensaver-command
drop usr/openwin/bin/xscreensaver-demo
drop usr/openwin/lib
drop usr/openwin/lib/app-defaults
drop usr/openwin/lib/app-defaults/XScreenSaver
drop usr/openwin/lib/xscreensaver
end package
