package system/manual
consolidation "man"
classification "System/Text Tools"
import SUNWman
# /usr/has
add dir path=usr/has mode=0755 owner=root group=bin
add dir path=usr/has/man mode=0755 owner=root group=bin
add dir path=usr/has/man/man1 mode=0755 owner=root group=bin
# Replace BSD vi with vim
chattr usr/share/man/man1/edit.1 path=usr/has/man/man1/edit.1
chattr usr/share/man/man1/ex.1 path=usr/has/man/man1/ex.1
chattr usr/share/man/man1/vedit.1 path=usr/has/man/man1/vedit.1
chattr usr/share/man/man1/vi.1 path=usr/has/man/man1/vi.1
chattr usr/share/man/man1/view.1 path=usr/has/man/man1/view.1
add link path=usr/share/man/man1/edit.1 target=../../../has/man/man1/edit.1
add link path=usr/share/man/man1/vedit.1 target=../../../has/man/man1/vedit.1
# Use the 32-bit ksh93 as a replacement /bin/sh
drop usr/share/man/man1/ksh.1
chattr usr/share/man/man1/sh.1 path=usr/has/man/man1/sh.1
add link path=usr/share/man/man1/ksh.1 target=ksh93.1
add link path=usr/share/man/man1/sh.1 target=ksh93.1
# Replace patch with GNU gpatch
chattr usr/share/man/man1/patch.1 path=usr/has/man/man1/patch.1
# Obsolete
drop usr/share/man/man1m/showrev.1m
end package

package SUNWman
consolidation "man"
renamed 133
depend system/manual
end package
