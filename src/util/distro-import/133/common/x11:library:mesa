package x11/library/mesa
consolidation "X"
classification "System/X11"
$(i386_ONLY)import SUNWxorg-mesa exclude usr/openwin
$(sparc_ONLY)import SUNWxorg-mesa
# Obsolete - replaced by /usr/openwin -> X11 symlink
$(i386_ONLY)drop usr/openwin/lib
$(i386_ONLY)drop usr/openwin/lib/amd64
$(i386_ONLY)drop usr/openwin/lib/amd64/libGL.so
$(i386_ONLY)drop usr/openwin/lib/amd64/libGL.so.1
$(i386_ONLY)drop usr/openwin/lib/amd64/libGLU.so
$(i386_ONLY)drop usr/openwin/lib/amd64/libGLU.so.1
$(i386_ONLY)drop usr/openwin/lib/amd64/libGLw.so
$(i386_ONLY)drop usr/openwin/lib/amd64/libGLw.so.1
$(i386_ONLY)drop usr/openwin/lib/libGL.so
$(i386_ONLY)drop usr/openwin/lib/libGL.so.1
$(i386_ONLY)drop usr/openwin/lib/libGLU.so
$(i386_ONLY)drop usr/openwin/lib/libGLU.so.1
$(i386_ONLY)drop usr/openwin/lib/libGLw.so
$(i386_ONLY)drop usr/openwin/lib/libGLw.so.1
$(i386_ONLY)drop usr/openwin/share
$(i386_ONLY)drop usr/openwin/share/include
$(i386_ONLY)drop usr/openwin/share/include/GL
# Depends on ogl-select service to create links at boot
depend_path /var/svc/manifest/application/opengl/ogl-select.xml
version 7.4.4
end package

