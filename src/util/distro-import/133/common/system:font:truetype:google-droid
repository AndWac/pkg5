package system/font/truetype/google-droid
consolidation "X"
classification "System/Fonts"
import SUNWttf-google-droid
add dir path=etc mode=0755 owner=root group=sys
add dir path=etc/X11 mode=0755 owner=root group=sys
add dir path=etc/X11/fontpath.d mode=0755 owner=root group=sys
add link path=etc/X11/fontpath.d/google-droid:pri=42 \
    target=../../../usr/share/fonts/TrueType/google-droid
end package

package SUNWttf-google-droid
consolidation "X"
renamed 133
depend system/font/truetype/google-droid
end package
