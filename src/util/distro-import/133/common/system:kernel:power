package system/kernel/power
consolidation "osnet"
classification "System/Administration and Configuration"
import SUNWpmu
import SUNWpmr

add driver name=pm \
    perms="* 0666 root sys"

chattr etc/power.conf \
	original_name=SUNWpm:etc/power.conf
end package

package SUNWpm
consolidation "osnet"
renamed 133
depend system/kernel/power
end package
