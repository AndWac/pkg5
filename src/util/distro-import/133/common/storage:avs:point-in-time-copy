package storage/avs/point-in-time-copy
consolidation "osnet"
classification "System/Enterprise Management"
import SUNWiiu
import SUNWiir
depend driver/storage/sv

add driver name=ii \
    perms="* 0666 root sys" \
    privs=sys_devices \
    privs=sys_config \
    devlink="type=ddi_pseudo;name=ii\t\D"


chattr usr/kernel/drv/ii.conf \
	original_name=SUNWii:usr/kernel/drv/ii.conf
end package

package SUNWii
consolidation "osnet"
renamed 133
depend storage/avs/point-in-time-copy
end package
