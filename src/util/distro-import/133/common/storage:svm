package storage/svm
consolidation "osnet"
classification "System/Core"
import SUNWmdu
import SUNWmdr

add driver name=md \
    perms="* 0640 root sys" \
    perms="admin 0644 root sys" \
    policy="admin write_priv_set=sys_config"

chattr etc/lvm/devpath \
	original_name=SUNWmd:etc/lvm/devpath
chattr etc/lvm/lock \
	original_name=SUNWmd:etc/lvm/lock
chattr etc/lvm/md.cf \
	original_name=SUNWmd:etc/lvm/md.cf
chattr etc/lvm/md.ctlrmap \
	original_name=SUNWmd:etc/lvm/md.ctlrmap
chattr etc/lvm/md.tab \
	original_name=SUNWmd:etc/lvm/md.tab
chattr etc/lvm/mddb.cf \
	original_name=SUNWmd:etc/lvm/mddb.cf
chattr etc/lvm/runtime.cf \
	original_name=SUNWmd:etc/lvm/runtime.cf
chattr kernel/drv/md.conf \
	original_name=SUNWmd:kernel/drv/md.conf
end package

package SUNWmd
consolidation "osnet"
renamed 133
depend storage/svm
end package
