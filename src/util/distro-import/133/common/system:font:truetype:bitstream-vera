package system/font/truetype/bitstream-vera
consolidation "X"
classification "System/Fonts"
import SUNWttf-bitstream-vera
add dir path=etc mode=0755 owner=root group=sys
add dir path=etc/X11 mode=0755 owner=root group=sys
add dir path=etc/X11/fontpath.d mode=0755 owner=root group=sys
add link path=etc/X11/fontpath.d/vera:pri=42 \
    target=../../../usr/share/fonts/TrueType/bitstream-vera
end package

package SUNWttf-bitstream-vera
consolidation "X"
renamed 133
depend system/font/truetype/bitstream-vera
end package
