package system/xvm/header-xvm
consolidation "xvm"
classification "System/Virtualization"
import SUNWxvmh
import SUNWxvmhvm
import SUNWxvmr
import SUNWxvmu
add group groupname=xvm gid=60
add user username=xvm uid=60 group=xvm gcos-field="xVM User" ftpuser=false
add dir group=xvm mode=0755 variant.opensolaris.zone=global owner=xvm \
	path=var/log/xen
depend library/python-2/libxml2-24
depend system/storage/vdiskadm
version 3.4.2
end package

package SUNWxvm
consolidation "xvm"
renamed 133
depend system/xvm/header-xvm
