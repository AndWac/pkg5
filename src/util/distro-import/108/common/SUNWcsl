package SUNWcsl
classification "System/Core"
import SUNWcsl
import SUNWcslr
# tag libc as needing reboot for now; this will change
# when we handle overlay mounts correctly on x86
# XXX work needed for SPARC
chattr lib/libc.so.1 reboot_needed=true
chattr lib/$(ARCH64)/libc.so reboot_needed=true
$(i386_ONLY)chattr lib/libc.so.1 drop preserve
$(i386_ONLY)chattr usr/lib/libc/libc_hwcap1.so.1 reboot_needed=true
$(i386_ONLY)chattr usr/lib/libc/libc_hwcap2.so.1 reboot_needed=true
$(i386_ONLY)chattr usr/lib/libc/libc_hwcap3.so.1 reboot_needed=true
end package 
