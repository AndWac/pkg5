package SUNWxvm
consolidation "xvm"
classification "System/Virtualization"
import SUNWxvmh
import SUNWxvmhvm
import SUNWxvmr
import SUNWxvmu
add group groupname=xvm gid=60
add user username=xvm uid=60 group=xvm gcos-field="xVM User" ftpuser=false
add dir group=xvm mode=0755 variant.opensolaris.zone=global owner=xvm \
	path=var/log/xen
depend SUNWlxml-python
depend SUNWvdisk
version 3.4.2
end package
