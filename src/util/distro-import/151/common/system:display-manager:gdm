package system/display-manager/gdm
consolidation "gnome"
classification "Desktop (GNOME)/Sessions"
import SUNWgnome-display-mgr
import SUNWgnome-display-mgr-root
add user username=gdm uid=50 group=gdm gcos-field="GDM Reserved UID" \
    home-dir=/var/lib/gdm
chattr etc/gdm/custom.conf \
    original_name=SUNWgnome-display-mgr:etc/X11/gdm/custom.conf
depend library/xdg/consolekit
end package

package SUNWgnome-display-mgr
consolidation "gnome"
renamed 133
depend system/display-manager/gdm
end package
